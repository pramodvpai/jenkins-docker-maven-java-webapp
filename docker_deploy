---
- hosts: dev
  become: True
  tasks:
    - name: Install Python pip
      yum:
        name: python-pip
        state: present
    - name: Install docker-py python module
      pip:
        name: docker.py
        state: present    
     
    - name: Start the container
      docker_container:
        name: myjavaapp
        image: "pramodvpp/javaweb:${BUILD_TAG}"
        state: started
        published_ports:
          - 0.0.0.0:8080:8080

